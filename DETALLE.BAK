CREATE SQL VIEW DETALLE REMOTE CONNECTION CAFE SHARE AS;
SELECT  CreditosDebitos.ANT_TPOANT, CreditosDebitos.ANT_NUMANT, CreditosDebitos.ANT_FCHANT, CreditosDebitos.ANT_CODPRD,;
                      TPOCREDITOSDEBITOS.TIPO, CASE WHEN TIPO = 1 THEN ANT_VALOR WHEN TIPO <> 1 THEN 0.00 END AS DEBE,; 
                      CASE WHEN TIPO = 2 THEN ANT_VALOR WHEN TIPO <> 2 THEN 0 END AS HABER,;
                      TPOCREDITOSDEBITOS.TAB_NOMBRE AS DESCRIP,;
                      CONVERT (char(12), ANT_FCHANT, 3) AS FECHAC;    
FROM         CreditosDebitos,TPOCREDITOSDEBITOS; 
    WHERE TAB_CORR = ANT_TPOANT AND ANT_CODPRD = ?GnCodPrd;                  	
ORDER BY CreditosDebitos.ANT_FCHANT;